<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dev Profile Optimizer</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .github-card {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            color: white;
            border-radius: 1rem;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .github-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }
        .skill-tag {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }
        .skill-tag:hover {
            background: rgba(59, 130, 246, 0.8);
            transform: scale(1.05);
        }
        .pulse {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <!-- Rest of the HTML content remains the same until the script section -->
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Elements
            const analyzeBtn = document.getElementById('analyze-github-btn');
            const reanalyzeBtn = document.getElementById('reanalyze-github-btn');
            const githubUsernameInput = document.getElementById('github-username');
            const githubForm = document.getElementById('github-analyzer-form');
            const githubResults = document.getElementById('github-results');
            const githubLoading = document.getElementById('github-loading');
            const errorContainer = document.getElementById('error-container');

            // Function to show error messages
            function showError(message) {
                if (!errorContainer) return;
                
                errorContainer.innerHTML = `
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                        <strong class="font-bold">Error: </strong>
                        <span class="block sm:inline">${message}</span>
                        <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
                            <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                <title>Close</title>
                                <path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/>
                            </svg>
                        </span>
                    </div>
                `;
                
                // Add click event to close button
                const closeBtn = errorContainer.querySelector('svg');
                if (closeBtn) {
                    closeBtn.addEventListener('click', function() {
                        errorContainer.innerHTML = '';
                    });
                }
                
                // Scroll to the top to show the error
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
            
            // Function to analyze GitHub profile
            async function analyzeGitHubProfile() {
                const username = githubUsernameInput.value.trim();
                if (!username) {
                    showError('Please enter a GitHub username');
                    return;
                }
                
                try {
                    // Show loading state
                    analyzeBtn.disabled = true;
                    if (reanalyzeBtn) reanalyzeBtn.disabled = true;
                    githubLoading.classList.remove('hidden');
                    if (githubForm) githubForm.classList.add('hidden');
                    
                    // Call your backend API to analyze GitHub profile
                    const response = await fetch(`/extract-github-skills?username=${encodeURIComponent(username)}`);
                    const data = await response.json();
                    
                    if (!response.ok) {
                        throw new Error(data.detail || 'Failed to analyze GitHub profile');
                    }
                    
                    // Display results
                    displayGitHubResults(data);
                    
                    // Show results section
                    if (githubResults) {
                        githubResults.classList.remove('hidden');
                    }
                    
                } catch (error) {
                    console.error('GitHub analysis error:', error);
                    showError(error.message || 'Failed to analyze GitHub profile');
                    if (githubForm) githubForm.classList.remove('hidden');
                } finally {
                    // Hide loading state
                    githubLoading.classList.add('hidden');
                    analyzeBtn.disabled = false;
                    if (reanalyzeBtn) reanalyzeBtn.disabled = false;
                }
            }

            // Rest of the JavaScript code remains the same
            // ...

            // Event listeners
            if (analyzeBtn) {
                analyzeBtn.addEventListener('click', analyzeGitHubProfile);
            }
            
            if (reanalyzeBtn) {
                reanalyzeBtn.addEventListener('click', analyzeGitHubProfile);
            }
        });
    </script>
</body>
</html>
